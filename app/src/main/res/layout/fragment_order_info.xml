<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".ui.order.OrderInfoFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/order_payment_fragment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <!-- <ImageButton
                android:id="@+id/order_confirmation_fragment_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/backgroundColor"
                android:src="@drawable/ic_baseline_arrow_back_24" />-->
<!--

            <TextView
                android:id="@+id/order_confirmation_fragment_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Cancel"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/appTextGrayColor"
                android:textSize="15sp"
                android:layout_marginEnd="22dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>-->

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/order_confirmation_fragment_text_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/ordered"
                    android:fontFamily="@font/open_sans_bold"
                    android:textSize="22sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="40dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Ваш номер заказа:"
                    android:fontFamily="@font/open_sans"
                    android:textSize="14sp"
                    android:textColor="@color/appTextGrayColor"
                    android:layout_marginTop="30dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/order_confirmation_fragment_product_payment_code"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@drawable/edit_text_frame_background"
                    android:layout_centerHorizontal="true"
                    android:text="@string/not_defined"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/open_sans_semibold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/autorized_user_have_text_1"
                    android:fontFamily="@font/open_sans"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp">

                <Button
                    android:id="@+id/order_confirmation_fragment_next_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:text="@string/go_to_main"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans_semibold" />

            </RelativeLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>