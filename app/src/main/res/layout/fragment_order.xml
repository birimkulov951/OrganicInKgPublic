<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".ui.order.OrderFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/order_fragment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/order_fragment_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/backgroundColor"
                android:src="@drawable/ic_back_button" />

            <TextView
                android:id="@+id/order_fragment_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_fragment_name"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_toEndOf="@id/order_fragment_back_button"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/payment_method"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="22dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/order_fragment_select_payment_method_card_view_1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardBackgroundColor="#DDDDDD"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="6dp"
                app:elevation="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/order_fragment_select_payment_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:text="@string/select_payment_method"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/appTextGrayColor"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/order_fragment_image_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:src="@drawable/ic_baseline_add_32"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:background="#DDDDDD" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shipment_method"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="22dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/order_fragment_select_payment_method_card_view_2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardBackgroundColor="#DDDDDD"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="6dp"
                app:elevation="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/order_fragment_select_shipment_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:text="@string/select_shipment_method"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/appTextGrayColor"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/order_fragment_image_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:src="@drawable/ic_baseline_add_32"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:background="#DDDDDD"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desired_date"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="22dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/order_fragment_select_payment_method_card_view_3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardBackgroundColor="#DDDDDD"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="6dp"
                app:elevation="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/order_fragment_desired_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:text="@string/dd_mm_gg"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/appTextGrayColor"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/order_fragment_image_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:src="@drawable/ic_baseline_add_32"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:background="#DDDDDD"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/order_fragment_next_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="30dp"
                    android:text="@string/next"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/open_sans_semibold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_fragment_next_button"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/order_fragment_hidden_alert_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_alert_20"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/order_fragment_hidden_alert_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@+id/order_fragment_hidden_alert_icon"
                        android:text="@string/not_all_fields_filled"
                        android:textSize="14sp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/colorRed"
                        android:visibility="gone"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>