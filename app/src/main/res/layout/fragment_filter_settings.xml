<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".ui.filter.FilterSettingsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/search_filter_fragment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/search_filter_fragment_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/backgroundColor"
                android:src="@drawable/ic_back_button" />

            <TextView
                android:id="@+id/search_filter_fragment_clean_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clean"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/appTextGrayColor"
                android:textSize="15sp"
                android:layout_marginEnd="22dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_filter"
                    android:fontFamily="@font/open_sans_bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="22dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/search_filter_select_category_card_view_1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardBackgroundColor="#DDDDDD"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="6dp"
                app:cardElevation="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/search_filter_select_category_card_view_1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:text="@string/select_category"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/appTextGrayColor"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/search_filter_select_category_card_view_1_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:src="@drawable/ic_baseline_add_32"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:background="#DDDDDD" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="22dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/search_filter_select_location_card_view_2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardBackgroundColor="#DDDDDD"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="6dp"
                app:cardElevation="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/search_filter_select_location_card_view_2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_medium"
                        android:text="@string/select_location"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/appTextGrayColor"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/search_filter_select_location_card_view_2_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:src="@drawable/ic_baseline_add_32"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:background="#DDDDDD"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="22dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/search_filter_fragment_edit_text_from"
                    android:layout_height="45dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/small"
                    android:background="@drawable/edit_text_frame_background"
                    android:hint="@string/from"
                    android:paddingStart="@dimen/medium"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/open_sans_semibold"
                    android:ems="10"
                    android:inputType="number"
                    android:singleLine="true"/>

                <EditText
                    android:id="@+id/search_filter_fragment_edit_text_until"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/small"
                    android:background="@drawable/edit_text_frame_background"
                    android:paddingStart="@dimen/margin_medium"
                    android:hint="@string/until"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/open_sans_semibold"
                    android:ems="10"
                    android:inputType="number"
                    android:singleLine="true"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/filtration"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="22dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/by_default"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/colorBlack"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/by_new"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/by_cheap"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/by_high_cost"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>

                <RadioGroup
                    android:id="@+id/search_filter_fragment_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <RadioButton
                        android:id="@+id/search_filter_fragment_radiobutton_by_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorAccent" />

                    <RadioButton
                        android:id="@+id/search_filter_fragment_radiobutton_by_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:buttonTint="@color/colorAccent"/>

                    <RadioButton
                        android:id="@+id/search_filter_fragment_radiobutton_by_cheap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:buttonTint="@color/colorAccent" />

                    <RadioButton
                        android:id="@+id/search_filter_fragment_radiobutton_by_high_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:buttonTint="@color/colorAccent"/>

                </RadioGroup>

            </RelativeLayout>
            <TextView
                android:id="@+id/filter_settings_done_button"
                android:text="@string/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/open_sans_semibold"
                android:textAllCaps="false"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:textColor="@color/appTextGrayColor2"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>